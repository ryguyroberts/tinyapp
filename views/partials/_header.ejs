<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!-- form that only displays when user cookie has valuelogged in-->
    <% if(username){ %>
    <form class="form-inline" action="/logout" method="POST">
      <label style="font-weight: bold; margin-right: 10px;" for="username">Logged in as: <%= username %></label>
      <div class="form-group mb-2 mx-auto">
        <button type="submit" class="btn btn-primary" style="background-color: black; color: white; border-color: black; font-weight: bold;">Logout</button>
      </div>
    </form>
    <% } else { %> 
    <!-- form that only displays when user cookie has no value-->
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2 mx-auto">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="username"
            style="width: 300px; margin: 1em"
          />
          <button type="submit" class="btn btn-primary" style="background-color: transparent; color: black; border-color: black; font-weight: bold;">Login</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>
